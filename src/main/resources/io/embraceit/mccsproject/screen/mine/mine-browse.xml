<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:dynattr="http://jmix.io/schema/dynattr/ui"
        caption="msg://mineBrowse.caption"
        focusComponent="minesTable">
    <data readOnly="true">
        <collection id="minesDc"
                    class="io.embraceit.mccsproject.entity.Mine">
            <fetchPlan extends="_base"/>
            <loader id="minesDl">
                <query>
                    <![CDATA[select e from mccs_Mine e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <dynattr:dynamicAttributes/>
        <screenSettings id="settingsFacet" auto="true"/>
        <presentations auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="minesTable" spacing="true">
        <filter id="filter"
                dataLoader="minesDl">
            <properties include=".*"/>
        </filter>
        <table id="minesTable"
               width="100%"
               dataContainer="minesDc"
               multiselect="true">
            <actions>
                <action id="add" type="add"/>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="exclude" type="exclude"/>
                <action id="refresh" type="refresh"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="tenant"/>
                <column id="mineCode"/>
                <column id="mineName"/>
                <column id="owner"/>
                <column id="commodity"/>
                <column id="province"/>
                <column id="district"/>
                <column id="farm"/>
                <column id="tel"/>
                <column id="postal"/>
                <column id="type"/>
                <column id="sector"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="addBtn" action="minesTable.add"/>
                <button id="createBtn" action="minesTable.create"/>
                <button id="editBtn" action="minesTable.edit"/>
                <button id="excludeBtn" action="minesTable.exclude"/>
                <button id="refreshBtn" action="minesTable.refresh"/>
                <button id="removeBtn" action="minesTable.remove"/>
            </buttonsPanel>
        </table>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
