<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="mccs">
        <createTable tableName="MCCS_MINE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_MCCS_MINE"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="DATETIME"/>
            <column name="TENANT" type="VARCHAR(255)"/>
            <column name="MINE_CODE" type="VARCHAR(255)"/>
            <column name="MINE_NAME" type="VARCHAR(255)"/>
            <column name="OWNER" type="VARCHAR(255)"/>
            <column name="COMMODITY" type="VARCHAR(255)"/>
            <column name="PROVINCE" type="VARCHAR(255)"/>
            <column name="DISTRICT" type="VARCHAR(255)"/>
            <column name="FARM" type="VARCHAR(255)"/>
            <column name="TEL" type="VARCHAR(255)"/>
            <column name="POSTAL" type="VARCHAR(255)"/>
            <column name="TYPE" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="mccs">
        <createIndex indexName="IDX_MINE" tableName="MCCS_MINE">
            <column name="COMMODITY"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>